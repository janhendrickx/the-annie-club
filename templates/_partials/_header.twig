
{% set navigation = craft.entries().section('navigation').all() %}

<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
        <a class="navbar-brand" href="{{ siteUrl }}" aria-label="Home">
            <img src="/assets/img/logo.png" width="129" height="129" alt="{{ siteName }}">
        </a>

        {# Hamburgerknop voor mobiel #}
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#mainNav" aria-controls="mainNav" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        {# Offcanvas voor mobiel, collapse voor desktop â€” zelfde inhoud #}
        <div class="offcanvas-lg offcanvas-end" tabindex="-1" id="mainNav" aria-labelledby="mainNavLabel">
            <div class="offcanvas-header">
                <img src="/assets/img/logo.png" width="80" height="80" alt="{{ siteName }}">
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div class="navbar-nav ms-auto">
                    {% for nav in navigation %}
                        {% set active = entry is defined and entry is not null and entry.slug == nav.slug ? ' active' : '' %}
                        <a class="nav-link{{ active }}" href="{{ nav.slug }}">{{ nav.title }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</nav>

